{
	"name": "ui",
	"version": "0.0.1-beta.0",
	"description": "A sample boilerplate library for react ui-kit in typescript with esm, cjs and umd [webpack] output",
	"main": "./lib/cjs/index.js",
	"module": "./lib/esm/index.js",
	"types": "./lib/esm/index.d.ts",
	"scripts": {
		"test": "echo \"Error: no test specified\" && exit 1",
		"clean": "rimraf lib",
		"build": "npm run clean && npm run build:esm && npm run build:cjs && npm run build:umd",
		"build:esm": "tsc",
		"build:cjs": "tsc --module commonjs --outDir lib/cjs",
		"build:umd": "webpack"
	},
	"keywords": [],
	"author": "01jam",
	"license": "ISC",
	"devDependencies": {
		"@types/node": "^17.0.6",
		"@types/react": "^17.0.37",
		"@types/react-dom": "^17.0.11",
		"@types/webpack": "^5.28.0",
		"react": "^17.0.2",
		"react-dom": "^17.0.2",
		"rimraf": "^3.0.2",
		"ts-loader": "^9.2.6",
		"ts-node": "^10.4.0",
		"typescript": "^4.5.4",
		"webpack": "^5.65.0",
		"webpack-cli": "^4.9.1"
	},
	"peerDependencies": {
		"react": "^16.8.0",
		"react-dom": "^16.8.0"
	}
}
